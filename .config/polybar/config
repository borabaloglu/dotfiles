foreground = ${colors.foreground}

###############################################################################
# MISCELLANEOUS
###############################################################################

modules-left = date spotify
modules-center = i3
modules-right = cpu pulseaudio-control wlan battery powermenu

tray-position = none
tray-detached = true

###############################################################################
# MODULES
###############################################################################

# WORKSPACES ##################################################################
[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
