# DATE ########################################################################
[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %Y
time = %H:%M
# Format
format =  <label>
format-padding = 1
# Label
label = %date%, %time%

# CPU USAGE ###################################################################
[module/cpu]
type = internal/cpu
interval = 1
# Format
format =  <label>
format-padding = 1
# Label
label = %percentage%%


# AUDIO #######################################################################
[module/pulseaudio-control]
type = custom/script
tail = true
# Format
format = <label>
format-padding = 1
# Label
label = %output%
exec = ~/.config/polybar/scripts/pulseaudio-control.bash listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-control.bash togmute
click-middle = ~/.config/polybar/scripts/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/scripts/pulseaudio-control.bash down

# WLAN ########################################################################
[module/wlan]
type = internal/network
interface = wlo1
interval = 5
label-connected =  %essid%
label-disconnected = 
# Format connected
format-connected = %{A1:$HOME/.config/polybar/scripts/wifi_widget.sh:}<label-connected>%{A}
format-connected-padding = 1
# Format disconnected
format-disconnected = <label-disconnected>
format-disconnected-padding = 1

# BATTERY #####################################################################
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
poll-interval = 1
full-at = 100
# Full
# label-full = %percentage%%
format-full = <ramp-capacity>
format-full-padding = 1

# Charging
label-charging = %percentage%%
format-charging =  <label-charging>
# format-charging = <animation-charging> <label-charging>
format-charging-padding = 1

# animation-charging-0 = 
# animation-charging-1 = 
